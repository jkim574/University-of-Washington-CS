def play_games():
    MAX = randint(2,100)
    print("")
    print("I'm thinking of a number between 1 and ", MAX, "...")
    answer = randint(1,MAX)
    print(answer)
    num_guess = 0
    gameOver = false

    while(gameOver == false):
        guess = int(input("Your guess? "))
        num_guess += 1



