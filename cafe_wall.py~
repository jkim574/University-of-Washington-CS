panel = DrawingPanel(650, 400, "grey")

def single_row(x, y, num, size):
    for boxes in range(0, num):
        panel.canvas.create_rectangle(x + 2 * boxes * size ,y ,2 * size * boxes + size + x, size, fill = "black")
#        panel.canvas.create_rectangle(x + 2 * boxes * size + size, y, size, size, fill = "white")

single_row(0,0,4,20)

#panel.set_background("gray")
#panel.canvas.create_rectangle(0, 0, 200, 300, fill = "black")

panel.mainloop()
